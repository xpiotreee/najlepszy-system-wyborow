<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="500.0" prefWidth="600.0" styleClass="login-background" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.teamzwyciezcow.najlepszysystemwyborow.controllers.user.auth.RegisterController">
    <VBox alignment="CENTER" fillWidth="false" maxWidth="-Infinity" maxHeight="-Infinity" spacing="20.0" styleClass="login-card">
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Rejestracja">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Text>
        
        <VBox alignment="CENTER" spacing="15.0" prefWidth="300.0">
            <TextField fx:id="firstNameField" promptText="Imię" styleClass="blur_field">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TextField>
            <TextField fx:id="lastNameField" promptText="Nazwisko" styleClass="blur_field">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TextField>
            <TextField fx:id="emailField" promptText="Email" styleClass="blur_field">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TextField>
            <TextField fx:id="peselField" promptText="PESEL" styleClass="blur_field">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TextField>
            <PasswordField fx:id="passwordField" promptText="Hasło" styleClass="blur_field">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </PasswordField>
            <PasswordField fx:id="confirmPasswordField" promptText="Potwierdź Hasło" styleClass="blur_field">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </PasswordField>
        </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="10.0" prefWidth="300.0">
           <Button mnemonicParsing="false" onAction="#handleBackToLogin" styleClass="button-secondary" text="Powrót" />
           <Button mnemonicParsing="false" onAction="#handleRegisterSubmit" styleClass="guzik" text="Zarejestruj">
               <padding>
                  <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
               </padding>
           </Button>
        </HBox>
    </VBox>
</StackPane>