<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="400.0" prefWidth="600.0" styleClass="login-background" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.teamzwyciezcow.najlepszysystemwyborow.controllers.user.auth.LoginController">
    <VBox alignment="CENTER" fillWidth="false" maxWidth="-Infinity" maxHeight="-Infinity" spacing="32.0" styleClass="login-card">
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Logowanie">
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
        </Text>
        
        <VBox alignment="CENTER" spacing="32.0">
            <TextField fx:id="emailField" promptText="Email" styleClass="blur_field">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets left="62.0" right="62.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </TextField>
            <PasswordField fx:id="passwordField" promptText="HasÅ‚o" styleClass="blur_field">
               <VBox.margin>
                  <Insets left="64.0" right="64.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </PasswordField>
            <HBox alignment="TOP_RIGHT" prefHeight="88.0" prefWidth="400.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleRegister" styleClass="guzik" text="Rejestracja">
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#handleLogin" styleClass="guzik" text="Zaloguj">
                     <HBox.margin>
                        <Insets right="64.0" />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </Button>
               </children>
            </HBox>
        </VBox>
    </VBox>
</StackPane>
