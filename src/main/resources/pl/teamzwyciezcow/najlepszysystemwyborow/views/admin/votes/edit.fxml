<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.ColumnConstraints?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.teamzwyciezcow.najlepszysystemwyborow.controllers.admin.votes.EditController">
    <VBox spacing="20" styleClass="main-container">
        <Label fx:id="headerLabel" styleClass="header-label" text="Edycja Głosu" />

        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints minWidth="120.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Użytkownik:" GridPane.rowIndex="0" />
            <Label fx:id="userLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Wybory:" GridPane.rowIndex="1" />
            <Label fx:id="electionLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Obecny kandydat:" GridPane.rowIndex="2" />
            <Label fx:id="currentCandidateLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Zmień na kandydata:" GridPane.rowIndex="3" />
            <ComboBox fx:id="candidateCombo" maxWidth="Infinity" styleClass="blur_field" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        </GridPane>

        <Button maxWidth="Infinity" onAction="#handleSave" styleClass="button-submit" text="ZAPISZ ZMIANĘ" />
        <Button maxWidth="Infinity" onAction="#handleBack" styleClass="button-secondary" text="ANULUJ" />
    </VBox>
</ScrollPane>
