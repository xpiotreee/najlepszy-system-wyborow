<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.teamzwyciezcow.najlepszysystemwyborow.controllers.admin.HomeController">
   <content>
      <VBox style="-fx-background-color: #f4f4f4;" alignment="TOP_CENTER">
         <!-- Hero Section -->
         <VBox styleClass="hero-section" alignment="CENTER" spacing="15" style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #34495e);">
            <Text styleClass="hero-title" text="Panel Administratora" />
            <Text styleClass="hero-subtitle" text="Zarządzaj wyborami, kandydatami i użytkownikami" />
         </VBox>

         <VBox styleClass="content-container" alignment="CENTER" spacing="20">
             <!-- Features Section -->
             <FlowPane styleClass="features-section" alignment="CENTER" hgap="30" vgap="30">
                <VBox styleClass="feature-card" onMouseClicked="#handleManageElections" style="-fx-cursor: hand;">
                   <Label styleClass="feature-title" text="Wybory" />
                   <Label styleClass="feature-description" text="Twórz nowe głosowania, edytuj istniejące i przeglądaj wyniki." />
                </VBox>
                
                <VBox styleClass="feature-card" onMouseClicked="#handleManageCandidates" style="-fx-cursor: hand;">
                   <Label styleClass="feature-title" text="Kandydaci" />
                   <Label styleClass="feature-description" text="Dodawaj i edytuj kandydatów, przypisuj ich do wyborów." />
                </VBox>

                <VBox styleClass="feature-card" onMouseClicked="#handleManageUsers" style="-fx-cursor: hand;">
                   <Label styleClass="feature-title" text="Użytkownicy" />
                   <Label styleClass="feature-description" text="Zarządzaj kontami użytkowników, dodawaj nowych i edytuj dane." />
                </VBox>

                <VBox styleClass="feature-card" onMouseClicked="#handleManageVotes" style="-fx-cursor: hand;">
                   <Label styleClass="feature-title" text="Głosy" />
                   <Label styleClass="feature-description" text="Przeglądaj historię głosów, zarządzaj błędnymi wpisami." />
                </VBox>
             </FlowPane>
             
             <VBox alignment="CENTER" style="-fx-padding: 40px;">
                 <Text style="-fx-font-size: 14px; -fx-fill: #95a5a6;" text="© 2026 Najlepszy System Wyborów - Panel Administracyjny" />
             </VBox>
         </VBox>
      </VBox>
   </content>
</ScrollPane>